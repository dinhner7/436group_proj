<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Customize">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sizeSelectTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Select Size:"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/sizeGuideline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/sizeSelectTXT"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <RadioGroup
                android:id="@+id/sizeSelectRBs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/sizeGuideline"
                android:layout_marginStart="10dp">
                <RadioButton
                    android:id="@+id/sizeS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Small 10&quot;       $10.00" />
                <RadioButton
                    android:id="@+id/sizeM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Medium 12&quot;   $12.00" />
                <RadioButton
                    android:id="@+id/sizeL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large 16&quot;       $16.00" />
            </RadioGroup>

            <TextView
                android:id="@+id/crustSelectTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/sizeSelectRBs"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Select Crust:"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/crustGuideline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/crustSelectTXT"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <RadioGroup
                android:id="@+id/crustSelectRBs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/crustGuideline"
                android:layout_marginStart="10dp">
                <RadioButton
                    android:id="@+id/crust1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular"/>
                <RadioButton
                    android:id="@+id/crust2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thin Crust"/>
                <RadioButton
                    android:id="@+id/crust3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Garlic Butter"/>
            </RadioGroup>

            <TextView
                android:id="@+id/cheeseSelectTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/crustSelectRBs"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Select Cheese:"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/cheeseGuideline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/cheeseSelectTXT"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />
            <RadioGroup
                android:id="@+id/cheeseSelectRBs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cheeseGuideline"
                android:layout_marginStart="10dp">
                <RadioButton
                    android:id="@+id/cheese1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mozzarella" />
                <RadioButton
                    android:id="@+id/cheese2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Swiss" />
                <RadioButton
                    android:id="@+id/cheese3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parmesan" />
                <RadioButton
                    android:id="@+id/cheese4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="None" />
            </RadioGroup>

            <TextView
                android:id="@+id/toppingSelectTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cheeseSelectRBs"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Select Toppings:"
                android:textSize="25sp"
                android:textStyle="bold" />
            <View
                android:id="@+id/toppingGuideline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/toppingSelectTXT"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@color/gray" />

            <ImageView
                android:id="@+id/pepperoniPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/toppingGuideline"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pepperoni"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/pepperoniPic"
                android:layout_alignEnd="@+id/pepperoniPic"
                android:layout_alignTop="@+id/pepperoniPic"
                android:gravity="center"
                android:text="Pepperoni"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/proniMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pepperoniPic"
                android:layout_alignStart="@+id/pepperoniPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/proniPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pepperoniPic"
                android:layout_alignEnd="@+id/pepperoniPic"/>

            <ImageView
                android:id="@+id/sardinePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/toppingGuideline"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/sardines"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/sardinePic"
                android:layout_alignEnd="@+id/sardinePic"
                android:layout_alignTop="@+id/pepperoniPic"
                android:gravity="center"
                android:text="Sardines"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sardineMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pepperoniPic"
                android:layout_alignStart="@+id/sardinePic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sardinePlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pepperoniPic"
                android:layout_alignEnd="@+id/sardinePic"/>

            <ImageView
                android:id="@+id/sausagePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/toppingGuideline"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/sardinePic"
                android:scaleType="fitCenter"
                android:src="@drawable/sausage"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/sausagePic"
                android:layout_alignEnd="@+id/sausagePic"
                android:layout_alignTop="@+id/pepperoniPic"
                android:gravity="center"
                android:text="Sausage"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sausageMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pepperoniPic"
                android:layout_alignStart="@+id/sausagePic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/sausagePlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pepperoniPic"
                android:layout_alignEnd="@+id/sausagePic"/>

            <ImageView
                android:id="@+id/baconPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/pepperoniPic"
                android:layout_alignStart="@+id/pepperoniPic"
                android:layout_marginTop="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/bacon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/baconPic"
                android:layout_alignEnd="@+id/baconPic"
                android:layout_alignTop="@+id/baconPic"
                android:gravity="center"
                android:text="Bacon"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/baconMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/baconPic"
                android:layout_alignStart="@+id/baconPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/baconPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/baconPic"
                android:layout_alignEnd="@+id/baconPic"/>

            <ImageView
                android:id="@+id/mushroomPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/sardinePic"
                android:layout_alignTop="@+id/baconPic"
                android:scaleType="fitCenter"
                android:src="@drawable/mushroom" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/mushroomPic"
                android:layout_alignEnd="@+id/mushroomPic"
                android:layout_alignTop="@+id/baconPic"
                android:gravity="center"
                android:text="Mushroom"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mushroomMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/baconPic"
                android:layout_alignStart="@+id/mushroomPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/mushroomPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/baconPic"
                android:layout_alignEnd="@+id/mushroomPic"/>

            <ImageView
                android:id="@+id/pepperPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/sausagePic"
                android:layout_alignTop="@+id/baconPic"
                android:scaleType="fitCenter"
                android:src="@drawable/peppers" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/pepperPic"
                android:layout_alignEnd="@+id/pepperPic"
                android:layout_alignTop="@+id/baconPic"
                android:gravity="center"
                android:text="Peppers"
                android:textStyle="bold" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pepperMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/baconPic"
                android:layout_alignStart="@+id/pepperPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pepperPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/baconPic"
                android:layout_alignEnd="@+id/pepperPic"/>

            <ImageView
                android:id="@+id/pineapplePic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/baconPic"
                android:layout_alignStart="@+id/pepperoniPic"
                android:layout_marginTop="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/pineapple"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/pineapplePic"
                android:layout_alignEnd="@+id/pineapplePic"
                android:layout_alignTop="@+id/pineapplePic"
                android:gravity="center"
                android:text="Pineapple"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/pappleMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pineapplePic"
                android:layout_alignStart="@+id/pineapplePic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/papplePlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pineapplePic"
                android:layout_alignEnd="@+id/pineapplePic"/>

            <ImageView
                android:id="@+id/basilPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/sardinePic"
                android:layout_alignTop="@+id/pineapplePic"
                android:scaleType="fitCenter"
                android:src="@drawable/basil"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/basilPic"
                android:layout_alignEnd="@+id/basilPic"
                android:layout_alignTop="@+id/pineapplePic"
                android:gravity="center"
                android:text="Basil"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/basilMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pineapplePic"
                android:layout_alignStart="@+id/basilPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/basilPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pineapplePic"
                android:layout_alignEnd="@+id/basilPic"/>

            <ImageView
                android:id="@+id/olivesPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignStart="@+id/sausagePic"
                android:layout_alignTop="@+id/pineapplePic"
                android:scaleType="fitCenter"
                android:src="@drawable/olives"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/olivesPic"
                android:layout_alignEnd="@+id/olivesPic"
                android:layout_alignTop="@+id/pineapplePic"
                android:gravity="center"
                android:text="Olives"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/olivesMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pineapplePic"
                android:layout_alignStart="@+id/olivesPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/olivesPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/pineapplePic"
                android:layout_alignEnd="@+id/olivesPic"/>

            <ImageView
                android:id="@+id/spinachPic"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_below="@id/pineapplePic"
                android:layout_alignStart="@+id/pepperoniPic"
                android:layout_marginTop="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/spinach"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/spinachPic"
                android:layout_alignEnd="@+id/spinachPic"
                android:layout_alignTop="@+id/spinachPic"
                android:gravity="center"
                android:text="Spinach"
                android:textStyle="bold"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/spinachMinB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/spinachPic"
                android:layout_alignStart="@+id/spinachPic"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/spinachPlusB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/spinachPic"
                android:layout_alignEnd="@+id/spinachPic"/>

            <View
                android:id="@+id/summaryGuideline"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/spinachPlusB"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="20dp"
                android:background="@color/gray" />
            <TextView
                android:id="@+id/numPizzasTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/summaryGuideline"
                android:layout_marginTop="30dp"
                android:layout_marginStart="100dp"
                android:text="Number of Pizzas:"
                android:textSize="20sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/minusPizzaB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_below="@+id/summaryGuideline"
                android:layout_toEndOf="@+id/numPizzasTXT"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/numPizzasNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/numPizzasTXT"
                android:layout_toEndOf="@+id/minusPizzaB"
                android:layout_marginStart="10dp"
                android:text="1"
                android:textSize="20sp" />
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/plusPizzaB"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:background="@drawable/button"
                android:layout_alignTop="@+id/minusPizzaB"
                android:layout_toEndOf="@+id/numPizzasNumber"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/costTXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/numPizzasTXT"
                android:layout_alignStart="@+id/numPizzasTXT"
                android:layout_marginTop="10dp"
                android:text="Total Cost: $ "
                android:textSize="20sp" />
            <TextView
                android:id="@+id/costNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/costTXT"
                android:layout_toEndOf="@+id/costTXT"
                android:text="0.00"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/finishPizza"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/costTXT"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/button"
                android:text="Finish Order"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>